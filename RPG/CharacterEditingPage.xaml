<Page x:Class="RPG.CharacterEditingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CharacterEditingPage">

    <Grid>
        <TextBox x:Name="characterNameTextBox" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="200" Height="30"/>
        <StackPanel HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Button Content="+" Width="30" Height="30" Click="PlusButton_Click"/>
                <Label x:Name="property1Label" Content="0" Width="30" Height="30" HorizontalAlignment="Center"/>
                <Button Content="-" Width="30" Height="30" Click="MinusButton_Click"/>
            </StackPanel>
        </StackPanel>
        <Button Content="Save Character" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Click="SaveButton_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10" Click="CancelButton_Click"/>
    </Grid>
</Page>
