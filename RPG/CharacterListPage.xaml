<Page x:Class="RPG.CharacterListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CharacterListPage">

    <Grid>
        <StackPanel x:Name="characterButtonPanel" Orientation="Vertical" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top">
            <Button Content="+" Click="AddCharacter_Click" Width="30" Height="30" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Page>
