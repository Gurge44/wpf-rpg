<Window x:Class="RPG.Fight"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPG"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="Fight" Height="720" Width="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Grid.ColumnSpan="3">
            <Label Name="Fight_label" Content="FIGHT" FontSize="50" FontWeight="Bold" HorizontalContentAlignment="Center"/>
        </Grid>
        <Grid x:Name="Team_field" Grid.Row="1" Grid.Column="0">
            
        </Grid>
        <Grid x:Name="Fight_field" Grid.Row="1" Grid.Column="1">
            
        </Grid>
        <Grid x:Name="Enemy_field" Grid.Row="1" Grid.Column="2">
            
        </Grid>
        
    </Grid>
</Window>
